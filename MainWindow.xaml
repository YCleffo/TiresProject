<Window x:Class="vehicle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vehicle"
        mc:Ignorable="d"
        Icon="Assets\Images\icon.ico"
        Title="Tires" MinHeight="300" MinWidth="600" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="FindTextBox" Text="Введите для поиска" Margin="10" FontSize="16"/>
            <ComboBox Grid.Column="1" Margin="10" FontSize="16"  x:Name="ComboBoxSort"/>
            <ComboBox Grid.Column="2" Margin="10" FontSize="16"  x:Name="ComboBoxFiltr"/>
        </Grid>
    </Grid>
</Window>
